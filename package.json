{
	"name": "netflix-controller",
	"private": true,
	"version": "1.0.7",
	"description": "Control Netflix in your browser with a gamepad or controller using this browser extension",
	"keywords": [
		"netflix",
		"controller",
		"extension"
	],
	"homepage": "https://github.com/JumpLink/NetflixController#readme",
	"bugs": {
		"url": "https://github.com/JumpLink/NetflixController/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JumpLink/NetflixController.git"
	},
	"license": "MIT",
	"author": "Finn Thompson, Amanda Copete, Pascal Garber",
	"type": "module",
	"main": "dist/app/content/content.js",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"postinstall": "wxt prepare",
		"check": "tsc --noEmit && biome check",
		"format": "biome check --write --unsafe"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/chrome": "^0.1.24",
		"typescript": "^5.9.3",
		"wxt": "^0.20.11"
	},
	"pnpm": {
		"overrides": {
			"@wxt-dev/browser": "^0.1.4"
		}
	}
}
