{
    "name": "Netflix Controller",
    "version": "1.0.7",
    "description": "Control Netflix in your browser with a gamepad or controller.",
    "manifest_version": 3,
    "permissions": ["storage", "tabs", "scripting"],
    "host_permissions": ["*://*.netflix.com/*"],
    "background": {
        "service_worker": "src/app/background/sw.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.netflix.com/*"],
            "exclude_matches": ["*://help.netflix.com/*"],
            "js": [
                "src/static/js/live-storage@1.0.2.js",
                "src/static/js/gamepads@1.2.2.js",
                "src/static/js/gamepad-icons@1.2.2.js",
                "src/static/js/pseudostyler@1.0.8.js",
                "src/app/content/components/direction.js",
                "src/app/content/components/navigatable.js",
                "src/app/content/components/static-navigatable.js",
                "src/app/content/components/title-panel.js",
                "src/app/content/components/slider.js",
                "src/app/content/components/billboard.js",
                "src/app/content/components/menu.js",
                "src/app/content/components/profiles.js",
                "src/app/content/components/choices.js",
                "src/app/content/components/jawbone.js",
                "src/app/content/ui/virtual-keyboard.js",
                "src/app/content/ui/bottom-bar.js",
                "src/app/content/ui/notice-bar.js",
                "src/app/content/ui/actions.js",
                "src/app/content/ui/connection-hint.js",
                "src/app/content/ui/compatibility-warning.js",
                "src/app/content/ui/error-bar.js",
                "src/app/content/pages/page.js",
                "src/app/content/pages/choose-profile.js",
                "src/app/content/pages/slider-browse.js",
                "src/app/content/pages/pure-slider-browse.js",
                "src/app/content/pages/featureless-browse.js",
                "src/app/content/pages/featured-browse.js",
                "src/app/content/pages/latest-browse.js",
                "src/app/content/pages/title-browse.js",
                "src/app/content/pages/watch.js",
                "src/app/content/pages/search.js",
                "src/app/content/content.js"
            ],
            "css": ["src/static/styles/content.css"]
        }
    ],
    "action": {
        "default_popup": "src/app/popups/popup.html",
        "default_icon": {
            "16": "src/static/icon16.png",
            "32": "src/static/icon32.png",
            "48": "src/static/icon48.png",
            "128": "src/static/icon128.png",
            "512": "src/static/icon512.png"
        }
    },
    "options_ui": {
        "page": "src/app/options/options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "src/static/icon16.png",
        "32": "src/static/icon32.png",
        "48": "src/static/icon48.png",
        "128": "src/static/icon128.png",
        "512": "src/static/icon512.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["src/static/buttons/*/*.png", "src/static/styles/content.css"],
            "matches": ["*://*.netflix.com/*"]
        }
    ]
}